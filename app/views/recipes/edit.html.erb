<h1>Edit Recipe</h1>
<hr>
<%= form_for @recipe, url: {action: "create"}, html: {"/recipes/2"} do |f| %>
<p>
  <%= f.label :name%><br>
  <%= f.text_field :name%>
</p>

<p>
  <%= f.label = :instructions %></br>
  <%= f.text_area :instructions %>
</p>

<p>
  <%= f.submit%>
</p>
